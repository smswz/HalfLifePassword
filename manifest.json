{
	// Required
	"name": "Password Half-Life",
	"version": "0.1",
	
	// Recommended
	"description": "An extension to substitute temporary passwords for the real password.",
	"icons": {
		"16": "icon_16.png",
		"32": "icon_48.png",
		"128": "icon_128.png"
	},
	//"default_locale": "en",

	// Pick one
	"page_action": {
		"default_icon": "icon_48.png",
		"default_popup": "popup.html"
	},

	// As needed
	"background_page": "background.html",
	"content_scripts": [
		{ "matches": ["http://*/*", "https://*/*"], "js": ["jquery-1.7.1.min.js", "content.js"] }
	],
	"content_security_policy": "default-src 'self'",
	"permissions": [
		"<all_urls>",
		"contextMenus",
		"tabs"
	]
}
